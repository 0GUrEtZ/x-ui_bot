telegram:
  token: "YOUR_BOT_TOKEN_HERE"
  admin_ids:
    - 123456789
  proxy: ""
  api_server: ""

panel:
  url: "https://your-panel-url.com"
  username: "admin"
  password: "your_password"
  limit_ip: 5  # Limit of simultaneous IP connections per user (0 = unlimited)
  traffic_limit_gb: 100  # Traffic limit per user in GB (0 = unlimited)
  backup_days: 7  # Backup database every N days to admins (0 = disabled)
  # Alert threshold in GB — if forecast exceeds this threshold, bot will notify admins (0 = disabled)
  traffic_alert_threshold_gb: 0
  # Percent of the threshold at which to alert (e.g., 90 = 90%)
  traffic_alert_percent: 90

payment:
  bank: "Сбербанк"
  phone_number: "+79001234567"
  trial_days: 3  # Number of days for trial subscription (0 = disabled)
  trial_text: "3 дня"  # Text for trial period button (e.g., "3 дня", "неделю")
  auto_approve_trial: false  # Automatically approve trial subscriptions (true/false)
  prices:
    one_month: 300
    three_month: 800
    six_month: 1500
    one_year: 2800

instructions:
  ios: "https://telegra.ph/ios-instructions"
  macos: "https://telegra.ph/macos-instructions"
  android: "https://telegra.ph/android-instructions"
  windows: "https://telegra.ph/windows-instructions"

rate_limit:
  max_requests_per_minute: 10  # Maximum requests per user in the window
  window_seconds: 60  # Time window in seconds

notifications:
  expiry_warning_days: [7, 3, 1]  # Send warnings N days before subscription expiry
